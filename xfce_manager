#!/bin/bash

# a script that determines in which workspace an application starts it is required that you have wmctrl installed for this

case $1 in
firefox)        wmctrl -s 0
                /usr/bin/firefox;;
brave)          wmctrl -s 0
                /usr/bin/brave;;
term)           wmctrl -s 1
                /usr/bin/alacritty;;
virtual_box)    wmctrl -s 1
                /usr/bin/virtualbox;;
signal)         wmctrl -s 2
                /usr/bin/signal-desktop;;
thunderbird)    wmctrl -s 2
                /usr/bin/thunderbird;;
spotify)        wmctrl -s 2
		/usr/bin/spotify;;
thunar)         wmctrl -s 3
                /usr/bin/thunar;;
esac
